<div class="container px-5 px-sm-0">
  <div class="row my-4">
    <div class="col-2"></div>
    <div class="col-3">
      <i class="fas fa-user-edit ml-3"></i>
      <span class="ml-2"><strong><%= @customer.username %></strong>さんの会員情報編集</span>
    </div>
  </div>

  <div class="row justify-content-center my-5">
    <h3 class="col-8 mb-4"></h3>
    <div class='col-10'>
      <%= form_with model: @customer, url: admin_customer_path do |f| %>
      <%= render "layouts/error", obj: @customer %>
        <table class="table-sm table-borderless">
          <tr class="field">
            <th>会員ID</th>
            <td><%= @customer.id %></td>
          </tr>
          <tr class="field">
            <th>氏名</th>
            <td>
              <%= f.text_field :last_name, class: "mr-5" %>
              <%= f.text_field :first_name %>
            </td>
          </tr>
          <tr class="field">
            <th>フリガナ</th>
            <td>
              <%= f.text_field :last_name_kana, class: "mr-5" %>
              <%= f.text_field :first_name_kana %>
            </td>
          </tr>
          <tr class="field">
            <th>ユーザーネーム</th>
            <td><%= f.text_field :username %></td>
          </tr>
          <tr class="field">
            <th>自己紹介欄</th>
            <td><%= f.text_field :introduction %></td>
          </tr>
          <tr class="field">
            <th>メールアドレス</th>
            <td><%= f.email_field :email %></td>
          </tr>
          <tr class="field">
            <th>電話番号</th>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr class="field">
            <th>郵便番号</th>
            <td><%= f.text_field :postal_code, id: "customer_postal_code" %></td>
          </tr>
          <tr class="field">
            <th>住所</th>
            <td>
              <%= f.text_field :prefecture_code, id: "customer_prefecture_code" %>
            </td>
          </tr>
          <tr class="field">
            <th></th>
            <td>
              <%= f.text_field :address_city, class: "mb-2", id: "customer_address_city" %></br>
              <%= f.text_field :address_street, class: "mb-2", id: "customer_address_street" %></br>
              <%= f.text_field :address_building %>
            </td>
          </tr>
          <tr class="field">
            <th>会員ステータス</th>
            <td>
              <%= f.select :is_deleted, {"有効" => false, "退会" => true} %>
            </td>
          </tr>
          <tr>
            <th></th>
            <td class="text-right">
              <%= link_to "キャンセル", :back %>
              <%= f.submit "変更を保存", class: "mt-3", data: { confirm: '会員情報を変更してよろしいですか？' } %>
            </td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>

