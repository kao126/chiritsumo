<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th class="text-center">投稿ID</th>
      <th class="text-center">投稿画像</th>
      <th class="text-center">投稿文</th>
      <th class="text-center">カテゴリID</th>
    </tr>
  </thead>
  <tbody>
    <% customer_posts.each do |post| %>
    <tr onclick='window.location="<%= '/admin/posts/' + post.id.to_s %>"' role="link" >
      <td class="text-center"><%= post.id %></td>
      <td class="text-center"><%= image_tag post.get_image(100, 100) %></td>
      <td class="text-center"><%= post.caption %></td>
      <td class="text-center"><%= post.category_id %></td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate customer_posts, remote: true %>