<table class="table table-hover">
  <thead class="thead-light">
    <tr>
      <th>会員ID</th>
      <th>ユーザーネーム</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
    <% customers.each do |customer| %>
    <tr onclick='window.location="<%= '/admin/customers/' + customer.id.to_s %>"' role="link" >
      <td><%= customer.id %></td>
      <td><%= customer.username %></td>
      <td><%= customer.email %></td>
      <% if !customer.is_deleted %>
        <td class="text-success font-weight-bold">有効</td>
      <% else %>
        <td class="text-black-50 font-weight-bold">退会</td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>
<%= paginate customers, remote: true %>