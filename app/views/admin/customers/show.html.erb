<div class="container contents px-5 px-sm-0">
  <div class="row my-5">
    <div class="col-2"></div>
    <div class="col-5">
      <i class="fas fa-user-check ml-3"></i>
      <span class="ml-2"><strong><%= @customer.username %></strong>さんの会員詳細</span>
    </div>
    <div class="col-5">
      <%=link_to admin_customer_posts_path(@customer) do %>
          <%= @customer.username %>さんの投稿一覧を見る
      <% end %>
    </div>

  </div>
  <div class="row">
    <div class='col-8 mx-auto'>
    <!--admin CustomersHelperに「show_content」について記載-->
    <table class="table table-borderless">
      <tr>
        <th>プロフィール画像</th>
        <td><%= image_tag @customer.get_profile_image(150,150) %></td>
      </tr>
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= show_content(@customer.full_name) %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= show_content(@customer.full_name_kana) %></td>
      </tr>
      <tr>
        <th>ユーザーネーム</th>
        <td><%= @customer.username %></td>
      </tr>
      <tr>
        <th>自己紹介欄</th>
        <td><%= show_content(@customer.introduction) %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= show_content(@customer.telephone_number) %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= show_content(@customer.postal_code) %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= show_content(@customer.address) %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <% if !@customer.is_deleted %>
          <td class="text-success font-weight-bold">有効</td>
        <% else %>
          <td class="text-black-50 font-weight-bold">退会</td>
        <% end %>
      </tr>
      <tr>
        <th></th>
        <td>
          <div class="text-right">
            <%= link_to "一覧に戻る", admin_customers_path %>
            <%=link_to "編集する", edit_admin_customer_path(@customer), class: "col-3" %>
          </div>
        </td>
      </tr>
    </table>
    </div>
  </div>
</div>
