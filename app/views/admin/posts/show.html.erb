<div class="container contents">
  <div>
      <%= image_tag @post.get_image(470, 580) %>
  </div>
  <div>
    <%= render 'public/favorites/admin_favorites_btn', post: @post %>
    <%= render 'public/favorites/counter', post: @post %>

    <% if @post.category.present? %>
      <p><%= @post.category.name %></p>
    <% end %>

    <!--ハッシュタグをリンク化 / Homesヘルパーに記載-->
    <% if @post.caption.present? %>
      <p><%= admin_render_with_tags(@post.caption) %></p>
    <% end %>

  </div>

  <!--他ユーザーには非表示-->
  <% if @post.customer == current_customer %>
    <%= link_to 'Edit', edit_post_path(@post) %>
    <%= link_to 'Destroy', post_path(@post), method: :delete, data: { confirm: '本当に消しますか？' } %>
  <% end %>

  <!--以下、コメント機能-->
  <div>
    <%= render "public/post_comments/counter", post: @post %>
    <%= render "public/post_comments/index", post: @post %>
  </div>

</div>
