<div class="container">
<%= render "public/devise/shared/error_messages", resource: resource %>
<h4 class="font-weight-bold color pl-3 mb-4"><i class="fas fa-key"></i> パスワード編集</h4>

  <%= form_with model: customer, url: customer_registration_path, method: :patch do |f| %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="form-group">
      <%= f.label "新しいパスワード" %></br>
      <%= f.password_field :password, autocomplete: "new-password", id: "new_pass", placeholder: "半角英数字記号（6文字以上）", class: "form-control" %>
      <input type="checkbox" onChange="document.getElementById('new_pass').type = (this.checked) ? 'text' : 'password';">表示する
    </div>

    <div class="form-group">
      <%= f.label "新しいパスワード（確認用）" %></br>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "confirm_new_pass", placeholder: "半角英数字記号（6文字以上）", class: "form-control" %>
      <input type="checkbox" onChange="document.getElementById('confirm_new_pass').type = (this.checked) ? 'text' : 'password';">表示する
    </div>

    <div class="form-group">
      <%= f.label "現在のパスワード" %></br>
      <%= f.password_field :current_password, autocomplete: "current-password", id: "current_pass", class: "form-control" %>
      <input type="checkbox" onChange="document.getElementById('current_pass').type = (this.checked) ? 'text' : 'password';">表示する
    </div>

    <div class="col my-4 d-flex justify-content-end">
      <%= link_to "キャンセル", :back, class: "link user-cancel text-center mr-2" %>
      <%= f.submit "更新する", class: "user-submit ml-5" %>
    </div>
  <% end %>
</div>
