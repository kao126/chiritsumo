<div class="signup-image">
  <%= render "public/devise/shared/error_messages", resource: resource %>
  <div class="container contents mt-5">
    <div class="row">
      <div class="col-9 mx-auto">
        <div class="customer-devise-form">
          <div class="my-2 text-center">
            <h5><strong>新規会員登録</strong></h5>
          </div>
          <div class="col-8 mx-auto">
            <%= form_with model: @customer, url: customer_registration_path, method: :post do |f| %>
            <div class="form-item mt-4 mb-2 col">
              <%= f.label "ユーザーネーム" %>
              <%= f.text_field :username, autofocus: true, autocomplete: 'off', placeholder: "半角英数字記号[@ _ -]（6~20文字）", class:"col devise-form-style" %>
            </div>
            <div class="form-item my-2 col">
              <%= f.label "メールアドレス" %>
              <%= f.email_field :email, autocomplete: 'off', class:"col devise-form-style" %>
            </div>
            <div class="form-item my-2 col">
              <%= f.label "パスワード" %>
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "半角英数字記号[@ _ -]（6~24文字）", class:"col devise-form-style" %>
            </div>
            <div class="form-item mb-4 col">
              <%= f.label "パスワード(確認用)" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "半角英数字記号[@ _ -]（6~24文字）", class:"col devise-form-style" %>
            </div>
            <div class="form-item mb-3 col d-flex justify-content-end">
              <%= f.submit "新規登録", class:"customer-devise-submit" %>
            </div>
          <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>