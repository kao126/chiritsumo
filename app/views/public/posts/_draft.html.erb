<!--「下書き保存」の履歴があるか確認-->
<% if draft_posts.present? %>
  <div class="row row-cols-3 px-lg-5 pt-3 pt-lg-5">
    <% draft_posts.each do |post| %>
      <%= link_to post_path(post) do %>
      <div class="col text-center p-0 mb-lg-4">
        <%= image_tag post.get_image(300, 300), class: "image_border img-fluid" %>
      </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <p class="contents text-center">下書き保存した投稿はありません</p>
<% end %>