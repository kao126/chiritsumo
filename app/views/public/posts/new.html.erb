<div class="container contents">
  <!--新規写真投稿フォーム-->
  <%= form_with model: @post do |f| %>
    <%= f.file_field :image, accept: "image/*" %>
    <%= f.text_area :caption %>
    <!--PostCategoryモデルにパラメータを飛ばすための実装-->
    <%= select_tag "name", options_from_collection_for_select(Category.all, :id, :name), prompt: '選択してください' %>
    <%= f.submit '投稿' %>
    <%= f.submit '下書きに保存', :name => 'pending' %>
  <% end %>
</div>