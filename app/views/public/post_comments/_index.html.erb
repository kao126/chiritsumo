<table>
  <tbody>
      <% post.post_comments.each do |post_comment| %>
      <tr>

        <td>
          <%= link_to customer_profile_path(post_comment.customer.username) do %>
            <%= image_tag post_comment.customer.get_profile_image(100,100) %><br>
            <%= post_comment.customer.username %>
          <% end %>
        </td>
        <td><%= post_comment.comment %></td>
        <td>
          <% if post_comment.customer == current_customer %>
            <%= link_to "削除", post_post_comment_path(post, post_comment), method: :delete, class: "btn btn-danger pull-right", remote: true %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </tbody>
</table>