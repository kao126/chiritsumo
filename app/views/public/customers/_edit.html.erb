<h4 class="font-weight-bold color mb-4"><i class="fas fa-user-cog"></i> 会員情報編集</h4>
<%= form_with model: customer, url: customer_path(customer), method: :patch do |f| %>
  <div class="form-group mb-3">
      <%= f.label "プロフィール画像" %>
    <div class="custom-file">
      <%= f.file_field :profile_image, accept: "image/*", class: "custom-file-input", id: "customFile" %>
      <%= f.label "画像ファイルを選択…", class: "custom-file-label" %>
    </div>
  </div>
  <%= f.label "名前" %>
  <div class="form-row mb-3">
    <div class="col-6">
      <%= f.text_field :last_name, placeholder: "(姓)", autocomplete: "off", class: "form-control mb-1" %>
    </div>
    <div class="col-6">
      <%= f.text_field :first_name, placeholder: "(名)", autocomplete: "off", class: "form-control mb-1" %>
    </div>
    <div class="col-6">
      <%= f.text_field :last_name_kana, placeholder: "(セイ)", autocomplete: "off", class: "form-control" %>
    </div>
    <div class="col-6">
      <%= f.text_field :first_name_kana, placeholder: "(メイ)", autocomplete: "off", class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label "ユーザーネーム" %>
    <%= f.text_field :username, placeholder: "半角英数字記号(6~20文字/英語必須)", autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-group">
    <div class="d-flex justify-content-between">
      <%= f.label "自己紹介欄" %>
      <span id="input-counter" class="align-self-end">0/100</span>
    </div>
    <%= f.text_area :introduction, placeholder: "100文字以内", size: "42x5", id: "input-text", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "携帯番号" %>
    <%= f.text_field :telephone_number, placeholder: "（例）050-1234-5678", autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "メールアドレス" %>
    <%= f.email_field :email, placeholder: "（例）xxx@gmail.co.jp", autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "郵便番号" %>
    <%= f.text_field :postal_code, placeholder: "（例）000-0001", autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label "住所" %>
    <%= f.collection_select :prefecture_code, JpPrefecture::Prefecture.all, :code, :name, { include_blank: "都道府県を選択" }, { class: "form-control mb-1" } %>
    <%= f.text_field :address_city, placeholder: "市区町村", autocomplete: "off", class: "form-control mb-1" %>
    <%= f.text_field :address_street, placeholder: "番地", autocomplete: "off", class: "form-control mb-1" %>
    <%= f.text_field :address_building, placeholder: "建物名 部屋番号", autocomplete: "off", class: "form-control" %>
  </div>
  <div class="form-group my-4 d-flex justify-content-end">
    <%= link_to "キャンセル", customer_profile_path(customer.username), class: "link user-cancel text-center mr-2" %>
    <%= f.submit "更新する", class: "user-submit ml-5" %>
  </div>
<% end %>