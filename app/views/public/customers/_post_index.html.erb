<% if posts.present? %>
  <div class="row contents row-cols-3 mx-auto px-5">
    <% posts.each do |post| %>
      <%= link_to post_path(post) do %>
        <div class="col text-center mb-4">
          <%= image_tag post.get_image(300, 300), class: "image_border" %>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <p class="contents text-center">「<i class="fas fa-plus-circle"></i> Post」から写真をシェアしよう！</p>
<% end %>
