<div class="row contents mx-auto px-5">
  <div class="col text-center mb-4">所持ポイント：<%= points_sum %> Pt</div>
</div>

<h4 class="font-weight-bold color pl-3 mb-4"><i class="fas fa-history"></i> ポイント(Pt)履歴</h4>

<div id="paginate">
  <table class="table">
    <thead class="thead-light">
      <tr>
        <th class="text-center col-3">獲得日時</th>
        <th class="text-center col-2">関連投稿</th>
        <th class="text-center col-2">数量</th>
      </tr>
    </thead>
    <tbody>
      <% point_posts.each do |post| %>
        <% if post.point.nil? %>
          <!--ポイントが付与されていない場合はスキップする-->
          <% next %>
        <% else %>
          <tr onclick='window.location="<%= '/posts/' + post.id.to_s %>"' role="link">
            <td class="text-center"><%= post.created_at.strftime("%Y年%m月%d日 %H時%M分") %></td>
            <td class="text-center"><%= image_tag post.get_image(60,60) %></td>
            <td class="text-center"><%= post.point %> Pt</td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
  <%= paginate point_posts %>
</div>