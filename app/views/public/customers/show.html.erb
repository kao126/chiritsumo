<div class="container contents">
  <div class="row mb-5">
    <div class="col-5 text-center">
      <%= image_tag @customer.get_profile_image(200,200), class: "rounded-circle" %>
    </div>
    <div class="col-7 p-0">
      <div class="col d-flex justify-content-start p-0">
        <h3 class="color"><%= @customer.username %></h3>
        <% if @customer == current_customer %>
        <div class="col-4 ml-3 align-self-center">
          <%= link_to "プロフィールを編集", edit_customer_registration_path %>
        </div>
        <% end %>
      </div>
      <div class="col">
        <%= @customer.introduction %>
      </div>
    </div>
  </div>

      <!--他ユーザーには非表示-->
      <% if @customer == current_customer %>
        <div class="col">
        </div>
        <div class="col">
          <%=link_to"下書き",post_draft_path(@customer.username) %>
        </div>

  <nav>
    <div class="nav nav-tabs" id="nav-tab" role="tablist">
      <a class="nav-item nav-link active" id="nav-home-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">投稿：<%= @posts.count %> 件</a>
      <a class="nav-item nav-link" id="nav-profile-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">お気に入り</a>
      <a class="nav-item nav-link" id="nav-contact-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Contact</a>
    </div>
  </nav>
  <div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade show active" id="nav-home" role="tabpanel" aria-labelledby="nav-home-tab"><%= render 'public/customers/post_index', posts: @posts %></div>
    <div class="tab-pane fade" id="nav-profile" role="tabpanel" aria-labelledby="nav-profile-tab"><%= render 'public/customers/favorites', favorite_posts: @favorite_posts %></div>
    <div class="tab-pane fade" id="nav-contact" role="tabpanel" aria-labelledby="nav-contact-tab">...</div>
  </div>

    <% else %>
      <%= render 'public/customers/post_index', posts: @posts %>


    <% end %>




</div>