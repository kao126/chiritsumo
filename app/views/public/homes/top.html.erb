<h1>Public::Homes#top</h1>
<p>Find me in app/views/public/homes/top.html.erb</p>

<div class="container">
  <% if customer_signed_in? %>
    <% @posts.each do |post| %>
      <%= link_to customer_profile_path(post.customer.username) do %>
        <div class="col-10 mb-3 mx-auto">
          <%= post.customer.username %>
          <%= image_tag post.get_image(470, 580) %>
      <% end %>
      <div>
        <% post.categories.each do |category| %>
          <p><%= category.name %></p>
        <% end %>
        <p><%#= post.render_with_tags(post.caption) %></p>
      </div>
    </div>
    <% end %>
  <% else %>
    <%= link_to 'ゲストログイン（閲覧用）', guest_session_path, method: :post %>
    <% @posts.each do |post| %>
      <%= link_to customer_profile_path(post.customer.username) do %>
        <div class="col-10 mb-3 mx-auto">
          <%= post.customer.username %>
          <%= image_tag post.get_image(470, 580) %>
      <% end %>
      <div>
        <% post.categories.each do |category| %>
          <p><%= category.name %></p>
        <% end %>
        <p><%#= post.render_with_tags(post.caption) %></p>
      </div>
    </div>
    <% end %>
  <% end %>
</div>